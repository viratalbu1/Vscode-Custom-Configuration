{
  "workbench.colorTheme": "Correia Gruvbox Theme",
  "workbench.iconTheme": "Monokai Classic Icons",
  "terminal.integrated.gpuAcceleration": "on",
  "terminal.integrated.drawBoldTextInBrightColors": true,
  "editor.fontFamily": "'JetBrainsMono Nerd Font', 'JetBrains Mono', monospace",
  "editor.fontSize": 16,
  "editor.fontLigatures": "'calt','liga'",
  "terminal.integrated.fontFamily": "'JetBrains Mono', monospace,'JetBrainsMono Nerd Font'",
  "workbench.editor.enablePreview": false,
  "workbench.editor.showTabs": "none",
  "breadcrumbs.enabled": false,
  "workbench.activityBar.location": "top",
  "workbench.sideBar.location": "right",
  "workbench.secondarySideBar.defaultVisibility": "hidden",
  "workbench.secondarySideBar.showLabels": false,
  "workbench.statusBar.visible": true,
  "workbench.editor.editorActionsLocation": "hidden",
  "workbench.colorCustomizations": {
    "editor.background": "#000000",
    "editor.foreground": "#d4d4d4",
    "editorCursor.foreground": "#b2cf8c",
    "tab.activeBorderTop": "#88d327",
    "activityBar.activeFocusBorder": "#ff0000",
    "sideBar.background": "#000000",
    "terminal.background": "#000000",
    "terminal.foreground": "#ebdbb2",
    "terminalCursor.foreground": "#d79921",
    "terminal.ansiBlack": "#282828",
    "terminal.ansiRed": "#cc241d",
    "terminal.ansiGreen": "#98971a",
    "terminal.ansiYellow": "#d79921",
    "terminal.ansiBlue": "#458588",
    "terminal.ansiMagenta": "#b16286",
    "terminal.ansiCyan": "#689d6a",
    "terminal.ansiWhite": "#a89984"
  },
  "editor.lineHighlightBackground": "#0a0a0a",
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.organizeImports": "explicit"
  },
  "eslint.useFlatConfig": true,
  "eslint.format.enable": true,
  "[typescript]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[typescriptreact]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[javascript]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[javascriptreact]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[json]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[jsonc]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "prettier.requireConfig": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.eol": "\n",
  "explorer.autoReveal": false,
  "editor.renderControlCharacters": false,
  "editor.inlayHints.enabled": "offUnlessPressed",
  "editor.stickyScroll.enabled": true,
  "telemetry.telemetryLevel": "off",
  "background.enabled": false
}
